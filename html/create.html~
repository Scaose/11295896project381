<SCRIPT language="javascript">
function add() {


	//Create an input type dynamically.
	var date= document.createElement("input");
	date.setAttribute("type", "date");
	date.setAttribute("value", "date");
	date.setAttribute("name", date);

	var grade= document.createElement("input");
	grade.setAttribute("type", "text");
	grade.setAttribute("pattern", "[A-Z]");
	grade.setAttribute("value", "A-Z");
	grade.setAttribute("name", grade);

	var score= document.createElement("input");
	score.setAttribute("type", "number");
	score.setAttribute("value", 0);
	score.setAttribute("name", score);

	var foo = document.getElementById("fooBar");
        var br = document.createElement("br");

        foo.appendChild(br);
	foo.appendChild(date);
        foo.appendChild(grade);
        foo.appendChild(score);

}
</SCRIPT>

